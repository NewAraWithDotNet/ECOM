@model ManageViewModel

<div class="manage-account">
    <form asp-action="UpdateUsername" method="post">
        <input type="hidden" asp-for="CurrentUserName" />
        <div>
            <label asp-for="NewUsername"></label>
            <input asp-for="NewUsername" />
        </div>
        <button type="submit">Update Username</button>
    </form>

    <form asp-action="UpdateEmail" method="post">
        <input type="hidden" asp-for="CurrentUserName" />
        <div>
            <label asp-for="NewEmail"></label>
            <input asp-for="NewEmail" />
        </div>
        <button type="submit">Update Email</button>
    </form>

    <form asp-action="UpdatePassword" method="post">
        <input type="hidden" asp-for="CurrentUserName" />
        <div>
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" type="password" />
        </div>
        <div>
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" type="password" />
        </div>
        <button type="submit">Update Password</button>
    </form>

    <form asp-action="UpdateAvatar" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CurrentUserName" />
        <div>
            <label asp-for="NewAvatar"></label>
            <input asp-for="NewAvatar" type="file" />
        </div>
        <button type="submit">Update Avatar</button>
    </form>
</div>

<style>
    .manage-account {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f4f4f4;
        padding: 20px;
    }

        .manage-account form {
            background: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .manage-account form h2 {
                margin-bottom: 20px;
                color: #333;
            }

            .manage-account form label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #555;
            }

            .manage-account form input[type="text"],
            .manage-account form input[type="password"],
            .manage-account form input[type="file"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid #ddd;
                border-radius: 4px;
                font-size: 16px;
            }

            .manage-account form button {
                background-color: #5cb85c;
                color: white;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 4px;
                font-size: 16px;
                transition: background-color 0.3s ease;
            }

                .manage-account form button:hover {
                    background-color: #4cae4c;
                }

                .manage-account form button[type="submit"] {
                    background-color: #007bff;
                    margin-right: 10px;
                }

                    .manage-account form button[type="submit"]:hover {
                        background-color: #0056b3;
                    }

        .manage-account .container {
            max-width: 600px;
            margin: 0 auto;
        }

            .manage-account .container h1 {
                text-align: center;
                margin-bottom: 40px;
                color: #333;
            }
</style>
