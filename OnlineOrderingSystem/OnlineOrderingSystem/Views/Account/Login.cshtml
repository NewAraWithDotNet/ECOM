@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<script>
    $(document).ready(function () {
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                toastr.success('@TempData["SuccessMessage"]');
        </text>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <text>
                toastr.error('@TempData["ErrorMessage"]');
        </text>
    }
        });
</script>



<style> 
    container-fluid {
        background-color:white;
    }
    .bg-image-vertical {
position: relative;
overflow: hidden;
background-repeat: no-repeat;
background-position: right center;
background-size: auto 100%;
}
</style>
<section class="ContinerPage">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center justify-content-center  px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-action="Login" method="post">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="Email" asp-for="Email" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Email">Email address</label>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="password" asp-for="Password" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="Password">Password</label>
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                        <p>Don't have an account? <a href="/Account/Register" class="link-info">Register here</a></p>

                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
