<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Admin Page @User.Identity.Name
    </title>
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="../assets/css/soft-ui-dashboard.css?v=1.0.7" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
    <style>
        /* Sidebar Container */
        .sidenav {
            width: 250px;
            background-color: #2c3e50;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

        /* Sidebar Header */
        .sidenav-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            text-decoration: none;
            margin-left:-40px;
        }

        .navbar-brand-img {
            height: 40px;
        }

        .brand-text {
            margin-left: 10px;
            font-size: 18px;
            color: #ecf0f1;
            font-weight: bold;
        }

        .close-icon {
            color: #bdc3c7;
            cursor: pointer;
        }

        /* Divider */
        .divider {
            border: 0;
            height: 1px;
            margin: 10px 0;
            background-color: #7f8c8d;
        }

        /* Sidebar Body */
        .sidenav-body {
            padding: 20px;
        }

        .nav-item {
            margin-bottom: 15px;
        }

        .nav-link {
            display: block;
            padding: 10px 20px;
            text-decoration: none;
            color: #ecf0f1;
            background-color: #34495e;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .nav-link:hover {
                background-color: #1abc9c;
            }

            .nav-link:active,
            .nav-link:focus {
                background-color: #16a085;
            }

        /* Main content area adjustments */
        .main-content {
            margin-left: 250px;
            transition: margin-left 0.3s;
        }

        .contentArea {
            padding: 20px;
        }

        .navbar {
            margin-left: 250px;
            transition: margin-left 0.3s;
        }
    </style>
</head>

<body class="g-sidenav-show bg-gray-100">
    <aside class="sidenav">
        <div class="sidenav-header">
            <i class="fas fa-times close-icon" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand" href="https://demos.creative-tim.com/soft-ui-dashboard/pages/dashboard.html" target="_blank">
                <img src="../assets/img/logo-ct-dark.png" class="navbar-brand-img" alt="main_logo">
                <span class="brand-text">Admin Dashboard</span>
            </a>
        </div>
        <hr class="divider">
        <div class="sidenav-body">
            <div class="nav-item">
                <a asp-action="Index" asp-controller="Orders" class="nav-link">Order</a>
            </div>
            <div class="nav-item">
                <a asp-action="Create" asp-controller="Categories" class="nav-link">Categories</a>
            </div>
            <div class="nav-item">
                <a asp-action="AdminProducts" asp-controller="Admin" class="nav-link">Products</a>
            </div>
            <div class="nav-item">
                <a asp-action="SalesAnaltyics" asp-controller="Admin" class="nav-link">Sales</a>
            </div>
            <div class="nav-item">
                <a asp-action="UserSitting" asp-controller="Admin" class="nav-link">Users</a>
            </div>
            <div class="nav-item">
                <a class="nav-link" href="#" id="contact" data-url="/Admin/Contact">
                    <span>Contact</span>
                </a>
            </div>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <!-- Search -->
                    
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a class="btn btn-outline-primary btn-sm mb-0 me-3" asp-controller="Home" asp-action="HomePage">Home</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">


                            <span class="">@User.Identity.Name</span>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="contentArea" id="contentArea">
            @RenderBody()
        </div>
    </main>

    <!-- Core JS Files -->
    <script>
        $(document).ready(function () {
            $('.AdminSide').click(function (event) {
                event.preventDefault();
                var url = $(this).data('url');
                console.log(url);
            });

            $(".AdminSide").click(function (event) {
                event.preventDefault();
                var url = $(this).data("url");
                console.log("clicked", url);

                $.ajax({
                    url: url,
                    method: 'GET',
                    success: function (data) {
                        $("#contentArea").html(data);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching the partial view:', error);
                    }
                });
            });
        });
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../assets/js/soft-ui-dashboard.min.js?v=1.0.7"></script>
</body>

</html>
