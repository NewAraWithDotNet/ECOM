@model List<OnlineOrderingSystem.Models.Order>

<h1>My Orders</h1>

@if (Model.Count == 0)
{
    <p>No orders found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Status</th>
                <th>Total Price</th>
                <th>Order Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>@order.TotalPrice</td>
                    <td>
                        <ul>
                            @foreach (var item in order.OrderItems)
                            {
                                <li>
                                    @item.Product.Name - Quantity: @item.Quantity - Price: @item.Price
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
