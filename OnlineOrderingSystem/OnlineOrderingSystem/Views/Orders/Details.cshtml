@model OnlineOrderingSystem.ViewModels.OrderViewModel

<div class="container">
    <h2>Order Details</h2>
    <div>
        <h3>Order Information</h3>
        <p>Order ID: @Model.Order.Id</p>
        <p>Order Date: @Model.Order.OrderDate.ToString("g")</p>
        <p>Status: @Model.Order.Status</p>
        <p>Total Price: @Model.Order.TotalPrice.ToString("C")</p>
    </div>
    <div>
        <h3>Order Items</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@(item.Quantity * item.Price)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
