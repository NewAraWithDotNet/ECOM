@model OnlineOrderingSystem.Models.Category
@{
    Layout = null;
}
<h2>@Model.Name</h2>
<style>
    .products{
        width:800px;
        height:600px;
        display:flex;
        gap:10p;
    }

        .products .CardBody {
           
            border-radius: 8px;
            padding: 20px;
            margin: 10px;
        }
</style>
@if (Model.Products != null && Model.Products.Any())
{
    <div class="products">
        @foreach (var product in Model.Products)
        {
            <div class="CardBody">
                <div class="card mb-4 shadow-sm">
                    @if (!string.IsNullOrEmpty(product.Image))
                    {
                        <img src="~/images/@product.Image" class="card-img-top" alt="@product.Name" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                        <p class="card-text"><strong>Category:</strong> @product.Category.Name</p>
                        <div class="btn-group">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">View</a>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <form asp-action="AddToCart" asp-controller="Carts" asp-route-id="@product.Id" method="post">
                                <button type="submit">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products available for this category.</p>
}
