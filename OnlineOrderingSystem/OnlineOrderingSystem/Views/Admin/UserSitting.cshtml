@model IEnumerable<User>
@{
    Layout = null;
}
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Avatar</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><img src="@user.Avatar" alt="Avatar" class="rounded-circle" width="50" height="50" /></td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="/Admin/UserEdit?id=@user.Id" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

