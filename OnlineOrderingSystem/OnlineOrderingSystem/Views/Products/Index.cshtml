@model IEnumerable<OnlineOrderingSystem.Models.Product>

@{
    ViewData["Title"] = "Shop";
}

<h1>Shop</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <img src="~/images/@item.Image" class="card-img-top" alt="@item.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>Price:</strong> @item.Price.ToString("C")</p>
                    <p class="card-text"><strong>Category:</strong> @item.Category.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
